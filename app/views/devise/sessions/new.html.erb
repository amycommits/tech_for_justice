<p class="heading">Log in here to get your record expunged.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :class => 'textBoxes', placeholder: "Email"  %>
  </div>

  <div class="field">

    <%= f.password_field :password, autocomplete: "off", :class => 'textBoxes', placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => 'check_label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :id => 'signUpBtn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
