<p id="notice"><%= notice %></p>

<h1>Listing User References</h1>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Attachment</th>
      <th>Reference Name</th>
      <th>Relation to Self</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_references.each do |user_reference| %>
      <tr>
        <td><%= user_reference.user_document_id %></td>
        <td><%= user_reference.attachment %></td>
        <td><%= user_reference.reference_name %></td>
        <td><%= user_reference.relation_to_user %></td>
        <td><%= link_to 'Show', user_reference %></td>
        <td><%= link_to 'Edit', edit_user_reference_path(user_reference) %></td>
        <td><%= link_to 'Destroy', user_reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

