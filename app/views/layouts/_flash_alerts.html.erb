<% flash.each do |key, value| %>
  <% if key == "alert" || key == "notice" %>
  	<% case key %>
  	<% when "alert" %>
  		<div class="alert alert-danger">
  	<% when "notice" %>
  		<div class="alert alert-success">
  	<% end %>
  <% else %>
	  <div class="alert alert-<%= key %>">
	<% end %>
	     <%= value %>
	     <button class="close" data-dismiss="alert">Ã—</button>
	  </div>
<% end %>
