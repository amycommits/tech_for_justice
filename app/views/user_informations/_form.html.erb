      <% @user_information.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pd_id %><br>
    <%= f.text_field :pd_id, :title => 'Enter Your Police Case ID', :class => 'tooltips' %>
  </div>
  <div class="field">
