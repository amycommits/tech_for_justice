  <div class="field">
    <%= f.label :prefix %><br>
    <%= f.text_field :prefix, :title => 'Enter Legal Prefix/Suffix for your Name', :class => 'tooltips'  %>
  </div>
  <div class="field">
    <%= f.label :suffix %><br>
    <%= f.text_field :suffix, :title => 'Enter Legal Prefix/Suffix for your Name', :class => 'tooltips'  %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
