<p id="notice"><%= notice %></p>

<h1>Listing User Case Infos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Docket</th>
      <th>Charged with</th>
      <th>Charge type</th>
      <th>Police description</th>
      <th>Case conclusion</th>
      <th>Is case pending</th>
      <th>Case end date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_case_infos.each do |user_case_info| %>
      <tr>
        <td><%= user_case_info.user %></td>
        <td><%= user_case_info.docket_id %></td>
        <td><%= user_case_info.charged_with %></td>
        <td><%= user_case_info.charge_type %></td>
        <td><%= user_case_info.police_description %></td>
        <td><%= user_case_info.case_conclusion %></td>
        <td><%= user_case_info.is_case_pending %></td>
        <td><%= user_case_info.case_end_date %></td>
        <td><%= link_to 'Show', user_case_info %></td>
        <td><%= link_to 'Edit', edit_user_case_info_path(user_case_info) %></td>
        <td><%= link_to 'Destroy', user_case_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

